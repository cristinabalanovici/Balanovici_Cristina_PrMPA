@model Balanovici_Cristina_PrMPA.Models.Animal

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Nume" class="control-label"></label>
                <input asp-for="Nume" class="form-control" />
                <span asp-validation-for="Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rasa" class="control-label"></label>
                <input asp-for="Rasa" class="form-control" />
                <span asp-validation-for="Rasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gen" class="control-label"></label>
                <input asp-for="Gen" class="form-control" />
                <span asp-validation-for="Gen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNasterii" class="control-label"></label>
                <input asp-for="DataNasterii" class="form-control" />
                <span asp-validation-for="DataNasterii" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                List<Balanovici_Cristina_PrMPA.Models.CabinetViewModels.AnimalInregistratData> clienti = ViewBag.Clienti;
                                foreach (var client in clienti)
                                {
                                    if (cnt++ % 3 ==0 )
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox" name="selectedClients" value="@client.ClientID" @(Html.Raw(client.IsRegistered ? "checked=\"checked\"" : "")) />
                                        @client.FirstName @: @client.LastName
                                        @:</td>
                                }
                                @:</tr>
                            }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
